name: Publish package

on: 
  push:
    tags:
      - "*"

jobs:
  Publish to pipy:
    runs-on: ubuntu-latest
    steps:
      - name: Prepare env
        run: pip3 install "poetry==1.3.1"
      
      - name: Config poetry 
        run: poetry config pypi-token.pypi ${{ secrets.PYPI_API_TOKEN }}
      
      - name: Build
        run: poetry build

      - name: Publish
        run: poetry publish  
